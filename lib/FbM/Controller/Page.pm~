package FbM::Controller::Page;
use Mojo::Base 'Mojolicious::Controller';
use v5.14;
use utf8;
Mojo::Loader->load('FbM::Model::Base');

sub list{
	my $self = shift;
	my $N = $self -> stash('N');
	
	$self -> stash(
				sign => 'ĞšÑƒĞšÑƒ!!',
				ABC  => FbM::Model::Base -> alphabet,
				LIST => FbM::Model::Base -> select("$N"),
				MENU => FbM::Model::Base -> build_menu,
		    );
  $self -> render;
  }
  

1;
